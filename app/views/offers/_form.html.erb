<%= form_for(@offer) do |f| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% @offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% unless @offer.persisted? %>
    <%= f.hidden_field :user_id, :value=>current_user.id%>
    <%= f.hidden_field :request_id, :value=>params[:request_id]%>
    <%= f.hidden_field :read, :value=>false%>
  <%end%>
  <div class="field">
    <%= f.label :subject %><br>
    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price, :class => 'text_field', :step => 'any' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :size=>"80x10"%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>