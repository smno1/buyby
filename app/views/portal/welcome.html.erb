<h1>
  <%= t(:slogan) %>
</h1>
<p>
  <%= t(:desc) %>
</p>

<!--<div class="col-lg-12">-->
<h3 class="page-header">
  <%= t(:recommend) %>
</h3>
<!--</div>-->

<div class="owl-carousel">
  <% @recommends.each do |rp| %>
      <div>
        <%= link_to rp.product do %>
            <img src=<%= rp.product.img_url %> height="120" width="120"/>
        <% end %>
      </div>
  <% end %>
</div>

<% if user_signed_in? %>
    <% if is_dealer? %>
        <%= render "portal/dealer_offers" %>
        <%= render "portal/user_requests" %>
    <% else %>
        <%= render "portal/user_requests" %>
    <% end %>
<% end %>