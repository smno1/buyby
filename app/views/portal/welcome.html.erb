<header id="myCarousel" class="carousel slide">
	<!-- Indicators -->
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>

	<!-- Wrapper for slides -->
	<div class="carousel-inner">
		<div class="item active">
			<div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide One');"></div>
			<div class="carousel-caption">
				<h2>Caption 1</h2>
			</div>
		</div>
		<div class="item">
			<div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Two');"></div>
			<div class="carousel-caption">
				<h2>Caption 2</h2>
			</div>
		</div>
		<div class="item">
			<div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Three');"></div>
			<div class="carousel-caption">
				<h2>Caption 3</h2>
			</div>
		</div>
	</div>

	<!-- Controls -->
	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
		<span class="icon-prev"></span>
	</a>
	<a class="right carousel-control" href="#myCarousel" data-slide="next">
		<span class="icon-next"></span>
	</a>
</header>
<h1 >
	Our service , your comfort
</h1>
<p>
	Professional delegation buying agent service
</p>
<% if user_signed_in? %>

<div class="col-lg-12">
	<h1 class="page-header">
		My Requests
	</h1>
</div>
<% current_user.requests.each_slice(3) do |requests|%>
	<div class="row">
	<%requests.each do |request| %>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-fw fa-gift"></i> <%=request.subject%></h4>
				</div>
				<div class="panel-body">
					<p> <%=request.description%></p>
					<em>(Total offers: <%=request.offers.count%>)</em>
					<%=link_to 'View Offers', request,:class=>"btn btn-default pull-right"%>
				</div>
			</div>
		</div>
	<%end%>
	</div>
<%end%>
<%=link_to 'new request', new_user_request_path(current_user), :class=>"btn btn-default" %>

<%end%>
