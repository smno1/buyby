<h1 >
	Our service , your comfort
</h1>
<p>
	Professional delegation buying agent service
</p>
<div class="col-lg-12">
	<h1 class="page-header">
		Recommend
	</h1>
</div>
<div class="owl-carousel">
	<% @recommends.each do |rp|%>
	<div> 
		<%=link_to rp.product do%>
		<img src=<%=rp.product.img_url%> height="120" width="120"> 
		<%end%>
	</div>
	<%end%>
</div>

<% if user_signed_in? %>

<div class="col-lg-12">
	<h1 class="page-header">
		My Requests
	</h1>
</div>
<% current_user.requests.each_slice(3) do |requests|%>
<div class="row">
	<%requests.each do |request| %>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4><i class="fa fa-fw fa-gift"></i> <%=request.subject%></h4>
			</div>
			<div class="panel-body">
				<p> <%=request.description%></p>
				<em>(Total offers: <%=request.offers.count%>)</em>
				<%=link_to 'View Offers', request,:class=>"btn btn-default pull-right"%>
			</div>
		</div>
	</div>
	<%end%>
</div>
<%end%>
<%=link_to 'new request', new_user_request_path(current_user), :class=>"btn btn-default" %>

<%end%>
