 <div class='col-lg-4 grid'>
 	<img src=<%= @product.img_url %> alt=<%=@product.name%> height='200' width='200'>
 </div>

 <div class='col-lg-6'>
 	<p>
 		<strong><%=t(:product_name)%>:</strong>
 		<%= @product.name %>
 	</p>

 	<p>
 		<strong><%=t(:description)%>:</strong>
 		<%= @product.description.gsub(/\n/,'<br>').html_safe %>
 	</p>


 	<%if current_user.present?%>
 		<%= link_to t('create_request'), new_user_request_path(current_user,:product_id=>@product.id), :class=>"btn btn-default" %>
 		<%if is_admin?%>
 			<%= link_to 'Edit', edit_product_path(@product), :class=>"btn btn-default" %>
 		<%end%>
 	<%else%>
 		<%=t(:login_notice)%>
 	<%end%>
 </div>
