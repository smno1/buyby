<div class="col-xs-4 col-xs-offset-4">
<h1 class="text-center"><%=t(:login)%></h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<form class="form col-md-12 center-block">
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, :class=>"form-control input-lg", :placeholder=>t(:email) %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off",:class=>"form-control input-lg", :placeholder=>t(:password) %>
  </div>
  <% if devise_mapping.rememberable? -%>
<div class="field">
  <%= f.check_box :remember_me %>
  <%= t(:remember_me) %>
</div>
<% end -%>
  <div class="form-group">
    <%= f.submit t(:login), :class=>"btn btn-primary btn-lg btn-block" %>
    <span class="pull-right"><%= render "users/shared/links" %></span>
  </div>
</form>
<% end %>
</div>