<h1><%=@user.nickname%></h1>
<% @attributes.each do |k,v|%>
<%=label_tag k%> : 
<%= v%>
<br/>
<%end%>
<%= form_for(@user) do |f| %>
    <div class="field">
    <%= t(:note)%><br>
    <%= f.text_area :note, :size=>"80x10"%>
  </div>
  <div class="actions">
    <%= f.submit t(:update)+t(:note) %>
  </div>
<% end %>